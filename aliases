###ALIASES###

#Python
alias pyvenv='python3 -m venv'
alias cheat='python3 ~/.cheat.d/cheat/cheat.py'
alias p2='python2'
alias p3='python3'

#Emacs
alias ecdaemon='test -e "/tmp/emacs1000/server" || emacs --daemon'
alias e='emacsclient -t'
alias ect='emacsclient -t'
alias ecc='emacsclient -c'
alias ec='emacsclient'

#Other
alias nautilus='nautilus --no-desktop'
alias us='setxkbmap -option ctrl:nocaps us'
alias de='setxkbmap -option ctrl:nocaps de'
alias ber='sudo bundle exec rake'
alias sshuni='ssh bi40resu@dialog.rrze.uni-erlangen.de'
alias be='bundle exec'

#i3
alias i3lock='i3lock -f -c 5E2750'

#mutt
alias mutt='neomutt'